<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN"
		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<field name="matrikelnummer">
		<field-validator type="required">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="userkennung">
		<field-validator type="required">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="name">
		<field-validator type="requiredstring">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="vorname">
		<field-validator type="requiredstring">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="anrede">
		<field-validator type="requiredstring">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="geschlecht">
		<field-validator type="requiredstring">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="geburtstag">
		<field-validator type="date">
          <param name="min">01/01/1900</param>
          <param name="max">12/31/2100</param>
			<message key="msg.validator.dateRange"/>
		</field-validator>
	</field>
	<field name="geburtsort">
		<field-validator type="requiredstring">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
</validators>